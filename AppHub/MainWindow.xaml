<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AppHub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AppHub">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button x:Name="btnAddApp" Content="Add App" Click="btnAddAppOnClick" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
        </StackPanel>

        <ListView x:Name="listApps" Grid.Row="1" Margin="10" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnLaunchApp" Content="Launch App" Grid.Row="2" HorizontalAlignment="Center" Margin="10" Click="btnLaunchAppOnClick"/>
    </Grid>
</Window>
