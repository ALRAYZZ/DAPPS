<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DAPPSApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DAPPSApp.Utilities"
    mc:Ignorable="d"
    Title="DAPPSApp">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Top Bar -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button x:Name="btnAddApp" Content="Add App" Click="btnAddAppOnClick" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- App List -->
        <ListView
            x:Name="listApps"
            Margin="10"
            SelectionMode="Single"
            IsItemClickEnabled="True"
            ItemClick="ListApps_ItemClick"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollMode="Enabled">

            <!-- Horizontal Layout -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <!-- Item Template -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="200"
                        Height="250"
                        Margin="10"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        CornerRadius="8"
                        Padding="10">

                        <!-- App Icon -->
                        <Image
                            Source="{Binding AppIcon}"
                            Stretch="UniformToFill"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Width="150"
                            Height="150"
                            Margin="0,10,0,0"/>

                        <!-- App Name -->
                        <TextBlock
                            Text="{Binding AppName}"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <!-- Buttons (Visible Only When Selected) -->
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="5"
                            Spacing="5">

                            <Button
                                Content="Launch"
                                Click="btnLaunchAppOnClick"
                                Tag="{Binding AppPath}"
                                Style="{StaticResource AccentButtonStyle}"/>

                            <Button
                                Content="Change Icon"
                                Click="btnAddChangeIconOnClick"
                                Tag="{Binding AppPath}"
                                Style="{StaticResource DefaultButtonStyle}"/>

                            <Button
                                Content="Rename"
                                Click="btnRenameAppOnClick"
                                Tag="{Binding AppPath}"
                                Style="{StaticResource DefaultButtonStyle}"/>

                            <Button
                                Content="Delete"
                                Click="btnDeleteAppOnClick"
                                Tag="{Binding AppPath}"
                                Style="{StaticResource DangerButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Bottom Bar -->
        <Button
            x:Name="btnLaunchApp"
            Content="Launch App"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="10"
            Click="btnLaunchAppOnClick"
            Style="{StaticResource AccentButtonStyle}"/>
    </Grid>
</Window>
