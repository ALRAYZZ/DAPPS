<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DAPPSApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DAPPSApp.Utilities"
    mc:Ignorable="d"
    Title="DAPPSApp">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.Resources>
            <Style TargetType="ListViewItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border x:Name="Border" BorderBrush="Transparent" BorderThickness="2">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Transparent"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Selected">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Green"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Grid x:Name="ContentGrid">
                                    <ContentPresenter/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!-- App List -->
        <ListView
            x:Name="listApps"
            Margin="10"
            SelectionMode="Single"
            IsItemClickEnabled="True"
            SelectionChanged="ListApps_SelectionChanged"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollMode="Enabled">

            <!-- Horizontal Layout -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <!-- Item Template -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="200"
                        Height="250"
                        Margin="5"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        CornerRadius="8"
                        Padding="0"
                        DoubleTapped="ListApps_ItemDoubleTapped"
                        PointerEntered="Card_PointerEntered"
                        PointerExited="Card_PointerExited">

                        <!-- App Icon -->
                        <Image
                            Source="{Binding AppIcon}"
                            Stretch="UniformToFill"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Margin="0"/>

                        <!-- App Name -->
                        <TextBlock
                            Text="{Binding AppName}"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Bottom Bar -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnAddApp" Content="Add App" Click="btnAddAppOnClick" Margin="0, 0, 10, 0" VerticalAlignment="Center" Style="{StaticResource AccentButtonStyle}"/>
            <Button x:Name="btnLaunchApp" Content="Launch App" Click="btnLaunchAppOnClick" Margin="10, 0, 0, 0" VerticalAlignment="Center" Style="{StaticResource AccentButtonStyle}" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>


